{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/lib/parallax.ts", "app/ui/button.jsx", "app/ui/navigation.jsx", "app/ui/header.jsx", "app/ui/fonts.ts", "app/ui/footer.jsx", "app/layout.tsx", "app/(routes)/worksheet-generator/page.jsx"],
  "exclude": ["node_modules"]
}
